<?xml version="1.0" encoding="utf-8"?>
<ContentDialog
    x:Class="ace_run.EditItemDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Edit Item"
    PrimaryButtonText="Save"
    CloseButtonText="Cancel"
    DefaultButton="Primary">

    <StackPanel Spacing="16" MinWidth="400">
        <TextBox x:Name="DisplayNameBox"
                 Header="Display Name"
                 PlaceholderText="Application name" />

        <Grid ColumnDefinitions="*,Auto" ColumnSpacing="8">
            <TextBox x:Name="FilePathBox"
                     Header="File Path"
                     PlaceholderText="Path to .exe file"
                     Grid.Column="0" />
            <Button Content="Browse"
                    Click="BrowseFile_Click"
                    VerticalAlignment="Bottom"
                    Grid.Column="1" />
        </Grid>

        <TextBox x:Name="ArgumentsBox"
                 Header="Arguments"
                 PlaceholderText="e.g. --incognito --new-window" />

        <Grid ColumnDefinitions="*,Auto" ColumnSpacing="8">
            <TextBox x:Name="WorkingDirectoryBox"
                     Header="Working Directory"
                     PlaceholderText="Defaults to exe folder"
                     Grid.Column="0" />
            <Button Content="Browse"
                    Click="BrowseFolder_Click"
                    VerticalAlignment="Bottom"
                    Grid.Column="1" />
        </Grid>

        <ToggleSwitch x:Name="RunAsAdminSwitch"
                       Header="Run as Administrator"
                       OffContent="Off"
                       OnContent="On" />
    </StackPanel>
</ContentDialog>

<?xml version="1.0" encoding="utf-8"?>
<ContentDialog
    x:Class="ace_run.ManageWorkspacesDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ace_run"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel MinWidth="380" Spacing="12">

        <!-- Error bar -->
        <InfoBar x:Name="ErrorBar"
                 IsOpen="False"
                 Severity="Error"
                 IsClosable="True" />

        <!-- Toolbar -->
        <StackPanel Orientation="Horizontal" Spacing="8">
            <Button x:Name="NewWorkspaceButton" Click="NewWorkspaceButton_Click">
                <StackPanel Orientation="Horizontal" Spacing="6">
                    <FontIcon Glyph="&#xE710;" FontSize="14" />
                    <TextBlock x:Name="NewWorkspaceLabel" Text="New Workspace" />
                </StackPanel>
            </Button>
            <Button x:Name="ImportButton" Click="ImportButton_Click">
                <StackPanel Orientation="Horizontal" Spacing="6">
                    <FontIcon Glyph="&#xE8B5;" FontSize="14" />
                    <TextBlock x:Name="ImportLabel" Text="Import" />
                </StackPanel>
            </Button>
        </StackPanel>

        <!-- Workspace list -->
        <ListView x:Name="WorkspaceListView"
                  MinHeight="160"
                  MaxHeight="360"
                  SelectionMode="None"
                  CanReorderItems="True"
                  CanDragItems="True"
                  AllowDrop="True"
                  DragItemsCompleted="WorkspaceListView_DragItemsCompleted">
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem" BasedOn="{StaticResource DefaultListViewItemStyle}">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                    <Setter Property="Padding" Value="8,4" />
                </Style>
            </ListView.ItemContainerStyle>
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="local:WorkspaceViewModel">
                    <Grid ColumnSpacing="8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="16" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <!-- Color dot -->
                        <Ellipse Grid.Column="0"
                                 Width="10" Height="10"
                                 Fill="{x:Bind ColorBrush, Mode=OneWay}"
                                 Visibility="{x:Bind HasColorVisibility, Mode=OneWay}"
                                 VerticalAlignment="Center" />

                        <!-- Workspace name (inline editable) -->
                        <TextBox Grid.Column="1"
                                 Text="{x:Bind Name, Mode=OneWay}"
                                 BorderThickness="0"
                                 Background="Transparent"
                                 Padding="4,2"
                                 VerticalAlignment="Center"
                                 LostFocus="WorkspaceName_LostFocus" />

                        <!-- App count -->
                        <TextBlock Grid.Column="2"
                                   Text="{x:Bind AppCountText, Mode=OneWay}"
                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                   FontSize="12"
                                   Margin="4,0"
                                   VerticalAlignment="Center" />

                        <!-- Default star toggle -->
                        <ToggleButton Grid.Column="3"
                                      Tag="{x:Bind}"
                                      IsChecked="{x:Bind IsDefault, Mode=OneWay}"
                                      Click="DefaultToggle_Click"
                                      Padding="6,4"
                                      ToolTipService.ToolTip="{x:Bind SetDefaultTooltip}">
                            <FontIcon Glyph="{x:Bind DefaultGlyph, Mode=OneWay}" FontSize="14" />
                        </ToggleButton>

                        <!-- Export button -->
                        <Button Grid.Column="4"
                                Tag="{x:Bind}"
                                Click="ExportWorkspace_Click"
                                Padding="6,4"
                                ToolTipService.ToolTip="{x:Bind ExportTooltip}">
                            <FontIcon Glyph="&#xEDE1;" FontSize="14" />
                        </Button>

                        <!-- Delete button -->
                        <Button Grid.Column="5"
                                Tag="{x:Bind}"
                                Click="DeleteWorkspace_Click"
                                Padding="6,4"
                                ToolTipService.ToolTip="{x:Bind DeleteTooltip}">
                            <FontIcon Glyph="&#xE74D;" FontSize="14" />
                        </Button>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <!-- Inline new-workspace form (collapsed by default) -->
        <Border x:Name="NewWorkspaceForm"
                Visibility="Collapsed"
                BorderBrush="{ThemeResource DividerStrokeColorDefaultBrush}"
                BorderThickness="0,1,0,0"
                Padding="0,12,0,0">
            <StackPanel Spacing="10">
                <TextBlock x:Name="NewFormTitle"
                           Style="{StaticResource BodyStrongTextBlockStyle}" />
                <TextBox x:Name="NewNameBox"
                         PlaceholderText="Workspace name" />
                <ComboBox x:Name="ColorCombo"
                          SelectedIndex="0"
                          HorizontalAlignment="Left"
                          MinWidth="160">
                    <ComboBoxItem Content="None" />
                    <ComboBoxItem Content="Blue" />
                    <ComboBoxItem Content="Green" />
                    <ComboBoxItem Content="Red" />
                    <ComboBoxItem Content="Yellow" />
                    <ComboBoxItem Content="Purple" />
                </ComboBox>
                <RadioButton x:Name="BlankRadio"
                             GroupName="NewWsInit"
                             IsChecked="True" />
                <RadioButton x:Name="CopyRadio"
                             GroupName="NewWsInit" />
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <Button x:Name="ConfirmNewBtn"
                            Style="{StaticResource AccentButtonStyle}"
                            Click="ConfirmNewWorkspace_Click" />
                    <Button x:Name="CancelNewBtn"
                            Click="CancelNewWorkspace_Click" />
                </StackPanel>
            </StackPanel>
        </Border>

    </StackPanel>
</ContentDialog>

<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="ace_run.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ace_run"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Ace Run">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <Grid x:Name="RootGrid"
          Margin="0"
          RowDefinitions="Auto,Auto,*">

        <!-- Title bar area -->
        <Grid Grid.Row="0" Padding="16,12" ColumnDefinitions="*,Auto,Auto">
            <TextBlock Text="Ace Run"
                       Style="{StaticResource TitleTextBlockStyle}"
                       VerticalAlignment="Center" />
            <Button Grid.Column="1"
                    x:Name="NewFolderButton"
                    Click="NewFolderButton_Click"
                    VerticalAlignment="Center"
                    Margin="0,0,8,0">
                <StackPanel Orientation="Horizontal" Spacing="6">
                    <FontIcon Glyph="&#xE8B7;" FontSize="14" />
                    <TextBlock x:Uid="NewFolderButtonLabel" Text="New Folder" />
                </StackPanel>
            </Button>
            <Button Grid.Column="2"
                    x:Name="AddButton"
                    Click="AddButton_Click"
                    Style="{StaticResource AccentButtonStyle}"
                    VerticalAlignment="Center">
                <StackPanel Orientation="Horizontal" Spacing="6">
                    <FontIcon Glyph="&#xE710;" FontSize="14" />
                    <TextBlock x:Uid="AddButtonLabel" Text="Add" />
                </StackPanel>
            </Button>
        </Grid>

        <!-- Search bar -->
        <AutoSuggestBox Grid.Row="1"
                        x:Name="SearchBox"
                        x:Uid="SearchBox"
                        PlaceholderText="Search apps..."
                        Margin="16,0,16,8"
                        QueryIcon="Find"
                        TextChanged="SearchBox_TextChanged" />

        <!-- Tree view (normal mode) -->
        <TreeView Grid.Row="2"
                  x:Name="AppTreeView"
                  Padding="8,0,8,8"
                  SelectionMode="Single"
                  CanDragItems="True"
                  CanReorderItems="False"
                  AllowDrop="True"
                  ItemInvoked="AppTreeView_ItemInvoked"
                  DragItemsStarting="AppTreeView_DragItemsStarting"
                  DragItemsCompleted="AppTreeView_DragItemsCompleted"
                  DragOver="AppTreeView_DragOver"
                  Drop="AppTreeView_Drop">
            <TreeView.Resources>
                <local:TreeItemTemplateSelector x:Key="TreeSelector">
                    <local:TreeItemTemplateSelector.AppTemplate>
                        <DataTemplate>
                            <Grid Padding="4,2"
                                  ColumnDefinitions="Auto,*,Auto"
                                  MinHeight="28">
                                <Image Grid.Column="0"
                                       Source="{Binding Content.IconSource, Mode=OneWay}"
                                       Width="16" Height="16"
                                       Margin="4,0,8,0"
                                       VerticalAlignment="Center"
                                       Stretch="Uniform" />
                                <TextBlock Grid.Column="1"
                                           Text="{Binding Content.DisplayName, Mode=OneWay}"
                                           FontSize="14" FontWeight="Normal"
                                           VerticalAlignment="Center"
                                           TextTrimming="CharacterEllipsis"
                                           ToolTipService.ToolTip="{Binding Content.FilePath, Mode=OneWay}" />
                                <Button Grid.Column="2"
                                        x:Uid="LaunchButton"
                                        Tag="{Binding Content.Id}"
                                        Click="LaunchButton_Click"
                                        VerticalAlignment="Center"
                                        ToolTipService.ToolTip="Launch">
                                    <FontIcon Glyph="&#xE768;" FontSize="16" />
                                </Button>
                            </Grid>
                        </DataTemplate>
                    </local:TreeItemTemplateSelector.AppTemplate>
                    <local:TreeItemTemplateSelector.FolderTemplate>
                        <DataTemplate>
                            <Grid Padding="4,2"
                                  MinHeight="28">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <FontIcon Grid.Column="0"
                                          Glyph="&#xE8B7;"
                                          FontSize="18"
                                          Margin="4,0,8,0"
                                          VerticalAlignment="Center" />
                                <TextBlock Grid.Column="1"
                                           Text="{Binding Content.DisplayName, Mode=OneWay}"
                                           FontSize="14" FontWeight="SemiBold"
                                           VerticalAlignment="Center"
                                           TextTrimming="CharacterEllipsis" />
                            </Grid>
                        </DataTemplate>
                    </local:TreeItemTemplateSelector.FolderTemplate>
                </local:TreeItemTemplateSelector>
            </TreeView.Resources>
            <TreeView.ItemTemplateSelector>
                <StaticResource ResourceKey="TreeSelector" />
            </TreeView.ItemTemplateSelector>
        </TreeView>

        <!-- Search results (filtered mode) -->
        <ListView Grid.Row="2"
                  x:Name="SearchResultsView"
                  Visibility="Collapsed"
                  Padding="8,0,8,8"
                  SelectionMode="None">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="local:AppItemViewModel">
                    <Grid Padding="4,4"
                          ColumnDefinitions="Auto,*,Auto"
                          MinHeight="32"
                          ToolTipService.ToolTip="{x:Bind FilePath}">
                        <Image Grid.Column="0"
                               Source="{x:Bind IconSource, Mode=OneWay}"
                               Width="20" Height="20"
                               Margin="4,0,8,0"
                               VerticalAlignment="Center"
                               Stretch="Uniform" />
                        <TextBlock Grid.Column="1"
                                   Text="{x:Bind DisplayName, Mode=OneWay}"
                                   FontSize="14" FontWeight="SemiBold"
                                   VerticalAlignment="Center"
                                   TextTrimming="CharacterEllipsis" />
                        <Button Grid.Column="2"
                                x:Uid="LaunchButton"
                                Tag="{x:Bind Id}"
                                Click="LaunchButton_Click"
                                VerticalAlignment="Center"
                                ToolTipService.ToolTip="Launch">
                            <FontIcon Glyph="&#xE768;" FontSize="16" />
                        </Button>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

    </Grid>
</Window>
